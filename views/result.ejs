<main id="main-result">
	<section id="section-result">
		<div class="container carta result">
			<h1 class="mb-4">
				<%=result.Title %>
				<small class="font-italic text-muted lead"><%=result.Year %></small>
			</h1>

			<div class="row">
				<div class="col-md-3">
					<img class="img-fluid border border-dark" src="<%=result.Poster %>" alt="" />
				</div>

				<div class="col-md-9">
					<h3 class="my-3">Plot</h3>
					<p class="ml-4">"<%=result.Plot %>"</p>
					<hr />
					<h3 class="my-3 text-capitalize"><%=result.Type %> Details</h3>
					<ul class="fa-ul">
						<% for(var i=0; i < 11 ; i++) {%>
						<li>
							<i class="fa-li fas fa-angle-right"></i><%= Object.keys(result)[i] %> : <%= Object.values(result)[i] %>
						</li>

						<% } %> <% if(result.Production) {%>
						<li><i class="fa-li fas fa-angle-right"></i>Production: <%=result.Production %>.</li>
						<%}%> <% if(result.totalSeasons) {%>
						<li><i class="fa-li fas fa-angle-right"></i>Seasons: <%=result.totalSeasons %>.</li>
						<%}%> <% if(result.BoxOffice) {%>
						<li><i class="fa-li fas fa-dollar-sign text-capitalize"></i>Box Office: <%=result.BoxOffice %></li>
						<%}%> <% if(result.Website) {%>
						<li>
							<i class="fa-li fas fa-at"></i>Website:
							<a href="<%=result.Website %>" class="font-weight-bold"><%=result.Title %></a>
						</li>
						<%}%>
					</ul>
					<hr />

					<h3 class="my-3">Ratings & Awards</h3>

					<ul class="fa-ul">
						<% result.Ratings.forEach(function(rating) { %>
						<li><i class="fa-li far fa-star"></i><%=rating.Source %></li>
						<div class="progress w-50 border border-warning bg-danger">
							<div
								class="progress-bar progress-bar-striped bg-success coloreame"
								role="progressbar"
								style="width: <%=rating.Value %>%"
								aria-valuenow="62"
								aria-valuemin="0"
								aria-valuemax="100"
							>
								%<%=rating.Value %>
							</div>
						</div>
						<% }); %>
					</ul>
					<div class="row">
						<div class="col">
							<ul class="fa-ul">
								<li>
									<i class="fa-li fas fa-award"></i>
									<p class="text-capitalize">Awards: <%=result.Awards %></p>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</main>
