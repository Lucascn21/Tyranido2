<main class="mainLanding">
	<section class="sectionLanding">
		<nav id="navLogin">
			<ul class="nav nav-tabs">
				<li class="nav-item">
					<a class="nav-link" aria-current="page" href="/register">Register</a>
				</li>
				<li class="nav-item current">
					<a class="nav-link disabled" href="/login">Login</a>
				</li>
			</ul>
		</nav>

		<form id="formLogin" class="formLanding" action="auth/login" method="post">
			<label>Username</label>
			<div class="input-group d-flex justify-content-center">
				<span class="input-group-text"><i class="fas fa-user" aria-hidden="true"></i></span>

				<input
					type="text"
					name="username"
					placeholder="Username"
					style="
						text-shadow: 2px 2px rgb(61 4 61);
						box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
					"
					required
				/>
			</div>

			<label>Password</label>
			<div class="input-group d-flex justify-content-center">
				<span class="input-group-text"><i class="fas fa-key" aria-hidden="true"></i></span>
				<input
					type="password"
					name="password"
					placeholder="Password"
					style="
						text-shadow: 2px 2px rgb(61 4 61);
						box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
					"
					required
				/>
			</div>
			<p>
				<button id="loginButton" formmethod="POST" form="formLogin" type="submit">Login</button>
			</p>

			<% if (message) { %><span class="alert alert-<%= alertType %> span-Context" role="alert"><%= message %></span><% } %>

			<p>
				<label>
					<sub>Test account</sub><br />
					<strong>test1234:test1234</strong>
				</label>
			</p>
		</form>
	</section>
</main>
